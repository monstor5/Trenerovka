<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:background="#ffff19">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="294dp"
        android:layout_height="51dp"
        android:text="TextView"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Отжимается"
        android:textColor="@android:color/holo_orange_dark"

        android:textSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="294dp"
        android:layout_height="53dp"
        android:text="   TextView    "
        android:textColor="@android:color/holo_orange_light"
        android:textSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but"
        android:layout_width="189dp"
        android:layout_height="51dp"
        android:backgroundTint="#ffff19"
        android:text="Назат (в начало)"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="15dp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.568"
        app:strokeColor="@android:color/black"
        app:strokeWidth="0.6dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but5"
        android:layout_width="189dp"
        android:layout_height="51dp"
        android:backgroundTint="#ffff19"
        android:text="Сохронить всё"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="15dp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257"
        app:strokeColor="@android:color/black"
        app:strokeWidth="0.6dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but6"
        android:layout_width="189dp"
        android:layout_height="51dp"
        android:backgroundTint="#ffff19"
        android:text="Ещё раз (рандом)"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="15dp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/but5"
        app:layout_constraintVertical_bias="0.581"
        app:strokeColor="@android:color/black"
        app:strokeWidth="0.6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>